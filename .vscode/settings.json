{
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.fontFamily": "Fira Code iScript",
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "comment",
                ],
                "settings": {
                    "fontStyle": "italic ",
                }
            },
            {
                "scope": [
                    "keyword",
                ],
                "settings": {
                    "fontStyle": "italic bold"
                }
            },
            {
                "scope": [
                    "keyword.control.conditional",
                    "keyword.operator",
                ],
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },
    "editor.inlayHints.enabled": "on",
    "dotnet.inlayHints.enableInlayHintsForParameters": true,
    "dotnet.inlayHints.enableInlayHintsForIndexerParameters": true,
    "dotnet.inlayHints.enableInlayHintsForObjectCreationParameters": true,
    "dotnet.inlayHints.enableInlayHintsForLiteralParameters": true,
    "dotnet.inlayHints.enableInlayHintsForOtherParameters": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorBlinking": "expand",
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 2,
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#40FF00",
    },
    "csharp.inlayHints.enableInlayHintsForImplicitObjectCreation": true,
    "csharp.inlayHints.enableInlayHintsForImplicitVariableTypes": true,
    "csharp.inlayHints.enableInlayHintsForLambdaParameterTypes": true,
    "csharp.inlayHints.enableInlayHintsForTypes": true,
    "dotnet.navigation.navigateToDecompiledSources": true,
    "editor.trimAutoWhitespace": true,
    "cSpell.userWords": [
        "Battlepass",
        "Behaviour",
        "Cysharp",
        "Fomo",
        "Gacha",
        "Gatcha",
        "Headshot",
        "Interactable",
        "leaderboard",
        "leaderboards",
        "Lerp",
        "Loadout",
        "Mathf",
        "Metas",
        "Owidget",
        "Poolable",
        "pooler",
        "Raycasts",
        "Sandook",
        "stackable",
        "UNRANKED"
    ],
    // globally (user/workspace setting)
    "separators.enabledSymbols": [
        "Classes",
        "Constructors",
        "Enums",
        "Functions",
        "Interfaces",
        "Methods",
        "Namespaces",
        "Structs"
    ],
    "separators.classes.borderWidth": 2,
    "separators.constructors.borderWidth": 2,
    "separators.enums.borderWidth": 2,
    "separators.functions.borderWidth": 2,
    "separators.interfaces.borderWidth": 2,
    "separators.methods.borderWidth": 2,
    "separators.namespaces.borderWidth": 2,
    "separators.structs.borderWidth": 2,
    "separators.classes.borderStyle": "dotted",
    "separators.constructors.borderStyle": "dotted",
    "separators.enums.borderStyle": "dotted",
    "separators.functions.borderStyle": "dotted",
    "separators.interfaces.borderStyle": "dotted",
    "separators.methods.borderStyle": "dotted",
    "separators.namespaces.borderStyle": "dotted",
    "separators.structs.borderStyle": "dotted",
    "separators.location": "aboveTheComment",
    // per-language setting
    "[typescript]": {},
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp",
        "separators.enabledSymbols": [
            "Classes",
            "Constructors",
            "Functions",
            "Methods",
            "Structs"
        ],
    },
    "vscode-pets.petSize": "large",
    "vscode-pets.position": "explorer",
    "vscode_custom_css.imports": [
        "file:///c:/Users/karan/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.2/dist/updateHandler.js"
    ],
    "github.copilot.editor.enableAutoCompletions": true,
    "editor.stickyScroll.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "csharp": true
    },
    "workbench.iconTheme": "icons"
}
